@{
    ViewData["Title"] = "Resources - Entrepreneurship Support Platform";
}

<style>
    :root {
        --primary-color: #014D4E;
        --background-color: #b5e7a0;
        --text-color: #333;
    }

    .resources-page {
        padding: 4rem 0;
        background-color: var(--background-color);
    }

    .section-title {
        color: var(--primary-color);
        font-size: 2.8rem;
        text-align: center;
        margin-bottom: 3rem;
        font-weight: 600;
    }

    .sub-section {
        margin-bottom: 5rem;
        padding: 0 1rem;
    }

    .sub-heading {
        color: var(--primary-color);
        font-size: 2rem;
        margin-bottom: 2.5rem;
        text-align: center;
        font-weight: 500;
    }

    /* Video Cards */
    .video-card {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        height: 100%;
        transition: transform 0.3s ease;
    }

        .video-card:hover {
            transform: translateY(-5px);
        }

    .video-container {
        border-radius: 10px;
        overflow: hidden;
        margin-bottom: 1rem;
    }

    .video-content h4 {
        color: var(--primary-color);
        font-size: 1.3rem;
        margin-bottom: 1rem;
        font-weight: 500;
    }

    .video-content p {
        color: var(--text-color);
        font-size: 1rem;
        line-height: 1.6;
    }

    /* Template Cards */
    .template-card {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        height: 100%;
        transition: transform 0.3s ease;
    }

        .template-card:hover {
            transform: translateY(-5px);
        }

    .template-preview {
        border: 1px solid #eee;
        border-radius: 10px;
        overflow: hidden;
        margin-bottom: 1rem;
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f8f9fa;
    }

        .template-preview img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

    .template-content h4 {
        color: var(--primary-color);
        font-size: 1.3rem;
        margin-bottom: 1rem;
        font-weight: 500;
    }

    .template-content p {
        color: var(--text-color);
        font-size: 1rem;
        line-height: 1.6;
        margin-bottom: 1rem;
    }

    .download-btn {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        background-color: var(--primary-color);
        color: white !important;
        text-decoration: none;
        border-radius: 50px;
        transition: all 0.3s ease;
        font-weight: 500;
    }

        .download-btn:hover {
            background-color: #023739;
            transform: translateY(-2px);
            text-decoration: none;
        }

    /* Navigation Buttons */
    .nav-buttons {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin-top: 4rem;
        padding: 2rem;
        background-color: var(--primary-color);
        border-radius: 15px;
    }

    .nav-btn {
        padding: 1rem 2rem;
        background-color: transparent;
        color: white !important;
        border: 2px solid white;
        border-radius: 50px;
        text-decoration: none;
        transition: all 0.3s ease;
        font-weight: 500;
    }

        .nav-btn:hover {
            background-color: white;
            color: var(--primary-color) !important;
            text-decoration: none;
        }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .section-title {
            font-size: 2.2rem;
        }

        .sub-heading {
            font-size: 1.8rem;
        }

        .nav-buttons {
            flex-direction: column;
            align-items: center;
            gap: 1rem;
            padding: 1.5rem;
        }

        .nav-btn {
            width: 200px;
            text-align: center;
        }
    }
</style>

