@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Root Variables */
    :root {
        --primary-color: #014D4E;
        --secondary-color: #333;
        --background-color: #b5e7a0;
        --light-color: #f9f9f9;
        --dark-color: #222;
        --spacing-section: 6rem;
    }

    /* Hero Section */
    .hero-section {
        width: 100%;
        height: 100vh;
        background-image: url('https://irp.cdn-website.com/8905cb79/dms3rep/multi/VC+CT+CAMPUS.png');
        background-size: cover;
        background-position: center;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: white;
        position: relative;
        margin-top: -56px;
    }

    .hero-content {
        background: rgba(0, 0, 0, 0.5);
        padding: 3rem;
        border-radius: 15px;
        width: 90%;
        max-width: 800px;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .hero-title {
        font-size: 4rem;
        margin: 0;
        line-height: 1.2;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        margin: 0;
        opacity: 0.9;
    }

    .hero-button {
        display: inline-block;
        padding: 1rem 2rem;
        background-color: var(--primary-color);
        color: white;
        text-decoration: none;
        border-radius: 50px;
        font-size: 1.2rem;
        transition: all 0.3s ease;
        border: 2px solid transparent;
        margin-top: 1rem;
    }

        .hero-button:hover {
            background-color: white;
            color: var(--primary-color);
            border-color: var(--primary-color);
            text-decoration: none;
        }

    /* Entrepreneur Section */
    .entrepreneur-section {
        background-color: white;
        padding: var(--spacing-section) 0;
    }

    .entrepreneur-writeup {
        padding: 2.5rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        height: 100%;
    }

        .entrepreneur-writeup h2 {
            color: var(--primary-color);
            font-size: 2.5rem;
            margin-bottom: 1.5rem;
        }

        .entrepreneur-writeup p {
            font-size: 1.1rem;
            line-height: 1.8;
            color: var(--secondary-color);
            margin-bottom: 1rem;
        }

    /* Video Container */
    .ratio {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
    }

    /* Trusted Platform Section */
    .trusted-platform {
        background-color: var(--background-color);
        padding: var(--spacing-section) 0;
    }

    .section-title {
        color: var(--primary-color);
        font-size: 2.5rem;
        margin-bottom: 3rem;
        text-align: center;
    }

    .trusted-image {
        width: 100%;
        border-radius: 15px;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
    }

    .trusted-writeup {
        background: white;
        padding: 2.5rem;
        border-radius: 15px;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        height: 100%;
    }

        .trusted-writeup h3 {
            color: var(--primary-color);
            font-size: 2rem;
            margin-bottom: 1.5rem;
        }

        .trusted-writeup ul {
            list-style-type: none;
            padding-left: 0;
            margin-bottom: 0;
        }

        .trusted-writeup li {
            margin-bottom: 1rem;
            padding-left: 1.5rem;
            position: relative;
            font-size: 1.1rem;
            line-height: 1.6;
        }

            .trusted-writeup li:last-child {
                margin-bottom: 0;
            }

            .trusted-writeup li:before {
                content: "•";
                color: var(--primary-color);
                position: absolute;
                left: 0;
                font-size: 1.2rem;
            }

    /* Navigation Buttons */
    .nav-buttons {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin-top: 4rem;
        padding: 2rem;
        background-color: var(--primary-color);
        border-radius: 15px;
    }

    .nav-btn {
        padding: 1rem 2rem;
        background-color: transparent;
        color: white !important;
        border: 2px solid white;
        border-radius: 50px;
        text-decoration: none;
        transition: all 0.3s ease;
        font-weight: 500;
    }

        .nav-btn:hover {
            background-color: white;
            color: var(--primary-color) !important;
            text-decoration: none;
        }

    /* News and Articles Section */
    .news-articles {
        background-color: white;
        padding: var(--spacing-section) 0;
    }

    .article-card {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        height: 100%;
        display: flex;
        flex-direction: column;
        transition: transform 0.3s ease;
    }

        .article-card:hover {
            transform: translateY(-5px);
        }

    .article-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 10px;
        margin-bottom: 1.5rem;
    }

    .article-card h3 {
        font-size: 1.4rem;
        margin-bottom: 1rem;
        color: var(--primary-color);
    }

    .article-card p {
        margin-bottom: 1.5rem;
        flex-grow: 1;
        line-height: 1.6;
    }

    .read-more {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        background-color: var(--primary-color);
        color: white !important;
        text-decoration: none;
        border-radius: 50px;
        transition: all 0.3s ease;
        margin-top: auto;
        text-align: center;
    }

        .read-more:hover {
            background-color: #023739;
            transform: translateY(-2px);
            text-decoration: none;
        }

    /* Container */
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        :root {
            --spacing-section: 4rem;
        }

        .hero-title {
            font-size: 2.5rem;
        }

        .hero-subtitle {
            font-size: 1.2rem;
        }

        .hero-content {
            padding: 2rem;
            width: 95%;
        }

        .entrepreneur-writeup,
        .trusted-writeup {
            padding: 1.5rem;
            margin-top: 2rem;
        }

        .section-title {
            font-size: 2rem;
            margin-bottom: 2rem;
        }
    }
</style>

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">Entrepreneurship Support Platform</h1>
        <div class="marquee-container">
            <marquee behavior="scroll" direction="left">
                <span>Welcome to the Entrepreneurship Support Platform!</span>
            </marquee>
        </div>
        <p class="hero-subtitle">Make a change in your life, we are here to assist you.</p>
        <a href="@Url.Action("ResourcesPage", "Home")" class="hero-button">Go to Resources</a>
    </div>
</section>

<!-- Entrepreneur Section -->
<section class="entrepreneur-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="ratio ratio-16x9">
                    <iframe src="https://www.youtube.com/embed/lJjILQu2xM8" allowfullscreen></iframe>
                </div>
            </div>
            <div class="col-md-6">
                <div class="entrepreneur-writeup">
                    <h2>What It Means to Be an Entrepreneur</h2>
                    <p>Being an entrepreneur means more than starting a business. It's about taking risks, embracing challenges, and having the vision and resilience to bring ideas to life. Entrepreneurs are problem solvers, innovators, and leaders who strive to make a difference in their communities and the world.</p>
                    <p>Entrepreneurship is a journey of constant learning, creativity, and determination. Whether you are building a startup or pursuing a side hustle, you are contributing to the economy, creating opportunities, and shaping the future.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Trusted Platform Section -->
<section class="trusted-platform">
    <div class="container">
        <h2 class="section-title">Why We Are a Trusted Platform</h2>
        <div class="row align-items-center">
            <div class="col-md-6">
                <img src="~/images/Pic2.png" alt="Our Commitment" class="trusted-image">
            </div>
            <div class="col-md-6">
                <div class="trusted-writeup">
                    <h3>Our Commitment to Excellence</h3>
                    <p>We are dedicated to supporting entrepreneurs by offering reliable and personalized guidance. Our platform is trusted by thousands of users for the following reasons:</p>
                    <ul>
                        <li>Expert Team: Our team consists of experienced professionals with deep knowledge in entrepreneurship and business management.</li>
                        <li>Proven Results: We have helped hundreds of startups achieve their business goals and grow into successful companies.</li>
                        <li>Secure and Reliable: Our platform ensures your data is safe with industry-standard security measures.</li>
                        <li>24/7 Support: We offer round-the-clock support to ensure that you have help whenever you need it.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- News and Articles Section -->
<section class="news-articles">
    <div class="container">
        <h2 class="section-title">Post</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="article-card">
                    <img src="~/images/article1.1.jpg" alt="Article 1" class="article-image">
                    <h3>Forbes Entrepreneurship Articles</h3>
                    <p>Explore insightful articles on entrepreneurship and get inspired to take your business to the next level.</p>
                    <a href="https://www.forbes.com/entrepreneurs/" target="_blank" class="read-more">Read More</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="article-card">
                    <img src="~/images/article2.1.jpg" alt="Article 2" class="article-image">
                    <h3>CNBC Entrepreneurship Articles</h3>
                    <p>Stay updated with the latest trends and tips in entrepreneurship from CNBC.</p>
                    <a href="https://www.cnbc.com/entrepreneurs/" target="_blank" class="read-more">Read More</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="article-card">
                    <img src="~/images/article3.1.jpg" alt="Article 3" class="article-image">
                    <h3>Harvard Business Review: The Heart of Entrepreneurship</h3>
                    <p>Delve into the essence of entrepreneurship with insights from Harvard Business Review.</p>
                    <a href="https://hbr.org/1985/03/the-heart-of-entrepreneurship" target="_blank" class="read-more">Read More</a>
                </div>
            </div>
        </div>

        <!-- Navigation Buttons -->
        <div class="nav-buttons">
            <a asp-controller="Home" asp-action="aboutus" class="nav-btn">About Us</a>
            <a asp-controller="Home" asp-action="Contact" class="nav-btn">Contact Us</a>
            <a asp-controller="Home" asp-action="FAQ" class="nav-btn">FAQs</a>
            <a asp-controller="Home" asp-action="Privacy" class="nav-btn">Privacy Policy</a>

        </div>
    </div>
</section>
