@model ECC_APP_2.Models.FundingGuideTemplate

@{
    ViewData["Title"] = "Resources";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css"> <!-- Link to your CSS file -->
    <style>
        .center-italic {
            text-align: center;
            font-style: italic;
        }

        .button-container {
            display: flex;
            gap: 20px; /* Space between the buttons */
        }

        .resource-button img {
            width: 200px;
            height: 200px;
            border-radius: 10px; /* Optional: rounded corners */
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Optional: add shadow for depth */
        }

        .resource-button {
            border: none;
            background: none;
        }
    </style>
</head>
<body>
    <h1 class="center-italic">Resources</h1>

    <!-- Container for the image buttons -->
    <div class="button-container">
        <!-- Funding Guide Button -->
       
        <form asp-controller="Home" asp-action="FundingGuide" method="get" class="resource-button">
            <button type="submit">
                <img src="~/images/funding3.jpg" alt="Funding Guide" />
            </button>
         
        </form>

        <!-- Business Proposal Button -->
        <form asp-controller="Home" asp-action="BusinessProposal" method="get" class="resource-button">
            <button type="submit">
                <img src="~/images/businessproposal.jpg" alt="Business Proposal" />
            </button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>
</html>
