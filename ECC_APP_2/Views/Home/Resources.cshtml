@model ECC_APP_2.Models.FundingGuideTemplate

@{
    ViewData["Title"] = "Resources";
    var userEmail = ViewBag.UserEmail as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css"> <!-- Link to your CSS file -->
    <style>
        .center-italic {
            text-align: center;
            font-style: italic;
        }

        .small-welcome {
            text-align: center;
            font-size: 14px; /* Adjust the font size here */
            color: #555; /* Optional: add a softer color */
        }

        /* Search bar styling */
        .search-container {
            position: absolute;
            top: 20px;
            right: 20px; /* Adjust distance from the right edge */
        }

        .search-bar {
            padding: 5px;
            width: 200px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .search-button {
            padding: 5px 10px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .button-container {
            display: flex;
            gap: 20px; /* Space between the buttons */
            justify-content: center; /* Center the buttons */
        }

        .resource-button img {
            width: 200px;
            height: 200px;
            border-radius: 10px; /* Optional: rounded corners */
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Optional: add shadow for depth */
        }

        .resource-button {
            border: none;
            background: none;
        }
    </style>
</head>
<body>
    <!-- Search Bar at Top Right -->
    <div class="search-container">
        <input type="text" placeholder="Search..." class="search-bar">
        <button type="submit" class="search-button">Search</button>
    </div>

    <!-- Centered Resources Heading -->
    <h1 class="center-italic">Resources</h1>

    <!-- Display personalized welcome message in smaller font below the heading -->
    @if (!string.IsNullOrEmpty(userEmail))
    {
        <h2 class="small-welcome">Welcome, @userEmail!</h2>
    }

    <!-- Container for the image buttons -->
    <div class="button-container">
        <!-- Funding Guide Button -->
        <form asp-controller="Home" asp-action="FundingGuide" method="get" class="resource-button">
            <button type="submit">
                <img src="~/images/fundingguide.jpeg" alt="Funding Guide" />
            </button>
        </form>

        <!-- Business Proposal Button -->
        <form asp-controller="Home" asp-action="BusinessProposal" method="get" class="resource-button">
            <button type="submit">
                <img src="~/images/businessproposal.jpeg" alt="Business Proposal" />
            </button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>
</html>
