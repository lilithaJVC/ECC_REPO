@model ECC_APP_2.Models.FundingGuideTemplate

@{
    ViewData["Title"] = "Business & Funding Proposal Resources";
    var userFirstname = ViewBag.UserFirstname as string;
    ViewBag.HideNavbar = true;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f4f4f4;
        }

        .search-container, .top-right-container {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 20px;
            align-items: center;
        }

        .icon-container {
            text-align: center;
            margin-left: 20px;
        }

        .icon {
            width: 40px;
            height: 40px;
            transition: transform 0.3s;
        }

            .icon:hover {
                transform: scale(1.1);
            }

        .badge {
            position: absolute;
            top: -5px;
            right: -10px;
            background: red;
            color: white;
            border-radius: 50%;
            padding: 0 5px;
            font-size: 0.8em;
        }

        .badge-blue {
            top: -5px; /* Adjust position relative to the first badge */
            right: -30px; /* Offset to avoid overlapping */
            background: blue;
            color: white;
        }

        .container {
            max-width: 800px;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1.center-italic {
            text-align: center;
            font-style: italic;
        }

        .importance-text {
            font-size: 1.1em;
            margin-bottom: 15px;
        }

        .small-welcome {
            font-size: 1.2em;
            margin-bottom: 20px;
        }

        .video-container {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
            gap: 10px;
        }

        iframe {
            width: 100%;
            height: 200px;
            border: none;
            border-radius: 8px;
        }

        .button-container {
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
            gap: 10px;
        }

        .resource-button {
            flex: 1;
            text-align: center;
            background-color: #e9ecef;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }

            .resource-button:hover {
                transform: scale(1.05);
            }

            .resource-button img {
                width: 60px;
                height: auto;
                margin-bottom: 10px;
            }

        button {
            background-color: #006400;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            button:hover {
                background-color: #004d00;
            }

        footer {
            text-align: center;
            margin-top: 20px;
            color: #777;
        }
    </style>
</head>
<body>

    <div class="search-container">
        <div class="icon-container">
            <h3 style="font-weight: bold;">Notifications</h3>
            <a asp-controller="Home" asp-action="StudentFeedback" style="position: relative;" id="notification-icon">
                <img src="~/images/not2.png" alt="Notifications" class="icon" />
                @if (ViewBag.NewFeedbackCount > 0)
                {
                    <span class="badge">@ViewBag.NewFeedbackCount</span>
                }
            </a>
        </div>


        <div class="icon-container">
            <h3 style="font-weight: bold;">Bussiness Showcase</h3>
            <a asp-controller="Home" asp-action="Bussiness_Showcase">
                <img src="~/images/bussinessshowcaseIcon.webp" alt="Bussiness_Showcase" class="icon" />
            </a>
        </div>


        <div class="icon-container">
            <h3 style="font-weight: bold;">Resources</h3>
            <a asp-controller="Home" asp-action="ResourcesPage">
                <img src="~/images/ResourcesIcon.webp" alt="Resources" class="icon" />
            </a>
        </div>

        <div class="icon-container">
            <h3 style="font-weight: bold;">Profile</h3>
            <a asp-controller="Home" asp-action="StudentProfile">
                <img src="~/images/prof-removebg-preview.png" alt="Profile" class="icon" />
            </a>
        </div>

        <div class="icon-container">
            <h3 style="font-weight: bold;">Messages</h3>
            <a asp-controller="Home" asp-action="StudentMessagesView" style="position: relative;" id="message-icon">
                <img src="~/images/messageicon-removebg-preview.png" alt="Message" class="icon" />
                <span class="badge">@ViewBag.NewMessagesCount</span>
                <span class="badge badge-blue">@ViewBag.SpecialMessagesCount</span>
            </a>
        </div>



        <div class="icon-container">
            <h3 style="font-weight: bold;">Networking</h3>
            <a asp-controller="Home" asp-action="Networking">
                <img src="~/images/networking-removebg-preview.png" alt="Networking" class="icon" />
           </a>


        </div>
    </div>

    <div class="top-right-container">
        <form asp-controller="Home" asp-action="Index" method="get">
            <button type="submit" class="index-button">Logout</button>
        </form>
    </div>

    <div class="container">
        <h1 class="center-italic">Student Services</h1>

        <p class="importance-text">
            Crafting a compelling business proposal and funding guide is essential for securing support and investment. A well-structured proposal not only outlines your vision but also demonstrates your commitment and preparedness, setting you apart in a competitive landscape.
        </p>

        <div class="small-welcome">
            Welcome, <strong>@userFirstname!</strong>
        </div>

        <div class="video-container">
            <div>
                <h3 class="video-heading">Learn about business proposals:</h3>
                <iframe src="https://www.youtube.com/embed/2j3cKR28r5Q" allowfullscreen></iframe>
            </div>
            <div>
                <h3 class="video-heading">Learn More About Funding Proposals:</h3>
                <iframe src="https://www.youtube.com/embed/RMFAcdbAfqI" allowfullscreen></iframe>
            </div>
        </div>

        <div class="button-container">
            <!-- Funding Guide Button -->
            <div class="resource-button">
                <h3>Create Funding Proposal Here</h3>
                <form asp-controller="Home" asp-action="FundingGuide" method="get" style="display: inline;">
                    <button type="submit">
                        <img src="~/images/fundingguide.jpeg" alt="Funding Guide" />
                    </button>
                </form>
                <div style="margin-top: 10px;">
                    <small style="color: #555;">Already have a funding proposal? Upload it here for a review:</small>
                </div>
                <form asp-controller="Mentor" asp-action="SubmitFundingProposal" method="post" enctype="multipart/form-data">
                 
                    <!-- Include upload functionality here -->
                </form>
            </div>

            <!-- Business Proposal Button -->
            <div class="resource-button">
                <h3>Create Business Proposal Here</h3>
                <form asp-controller="Home" asp-action="BusinessProposal" method="get">
                    <button type="submit">
                        <img src="~/images/businessproposal.jpeg" alt="Business Proposal" />
                    </button>
                </form>
                <div style="margin-top: 10px;">
                    <small style="color: #555;">Already have a Business proposal? Upload it here for a review:</small>
                </div>
                <form asp-controller="Mentor" asp-action="SubmitBusinessProposal" method="post" enctype="multipart/form-data">
                    <!-- Include upload functionality here -->

                </form>
            </div>
        </div>
    </div>

    <footer>
        <p>&copy; 2024 ECC App. All rights reserved.</p>
    </footer>


    @section Scripts {
       
        </script>

    }

    @section Scripts2 {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(document).ready(function () {
                // Update unread count periodically
                function updateUnreadCount() {
                    $.ajax({
                        url: '@Url.Action("GetUnreadMessageCount", "Home")',
                        method: 'GET',
                        success: function (data) {
                            if (data.unreadCount > 0) {
                                $('.badge-blue').text(data.unreadCount).show();
                            } else {
                                $('.badge-blue').hide();
                            }
                        }
                    });
                }

                // Mark messages as read when the icon is clicked
                $('#message-icon').click(function (e) {
                    e.preventDefault(); // Prevent default navigation
                    $.ajax({
                        url: '@Url.Action("MarkMessagesAsRead", "Home")',
                        method: 'POST',
                        success: function (data) {
                            if (data.success) {
                                $('.badge-blue').hide(); // Hide the badge on success
                            }
                        }
                    });

                    // Redirect to the messages page after marking as read
                    window.location.href = $(this).attr('href');
                });

                // Update count on page load and every 60 seconds
                updateUnreadCount();
                setInterval(updateUnreadCount, 60000);
            });
        </script>
    }



</body>
</html>
