@{
    ViewData["Title"] = "Contact Us - Entrepreneurship Support Platform";
}

<style>
    :root {
        --primary-color: #014D4E;
        --background-color: #b5e7a0;
        --text-color: #333;
    }

    .contact-page {
        padding: 4rem 0;
        background-color: var(--background-color);
        min-height: calc(100vh - 76px);
    }

    .section-title {
        color: var(--primary-color);
        font-size: 2.8rem;
        text-align: center;
        margin-bottom: 3rem;
        font-weight: 600;
    }

    .contact-card {
        background: white;
        border-radius: 15px;
        padding: 2.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
    }

    .info-section {
        margin-bottom: 2rem;
    }

    .info-item {
        display: flex;
        align-items: center;
        margin-bottom: 1.5rem;
        padding: 1rem;
        background-color: rgba(1, 77, 78, 0.05);
        border-radius: 10px;
        transition: transform 0.3s ease;
    }

    .info-item:hover {
        transform: translateX(10px);
    }

    .info-icon {
        width: 40px;
        height: 40px;
        background-color: var(--primary-color);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
        color: white;
        flex-shrink: 0;
    }

    .info-content {
        flex-grow: 1;
    }

    .info-label {
        font-weight: 600;
        color: var(--primary-color);
        margin-bottom: 0.25rem;
    }

    .info-text {
        color: var(--text-color);
        font-size: 1rem;
    }

    /* Form Styling */
    .contact-form {
        margin-top: 1rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        font-weight: 500;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem;
        border: 2px solid rgba(1, 77, 78, 0.1);
        border-radius: 8px;
        transition: border-color 0.3s ease;
        font-size: 1rem;
    }

    .form-control:focus {
        outline: none;
        border-color: var(--primary-color);
    }

    textarea.form-control {
        min-height: 150px;
        resize: vertical;
    }

    .submit-btn {
        background-color: var(--primary-color);
        color: white;
        padding: 1rem 2rem;
        border: none;
        border-radius: 50px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        width: 100%;
    }

    .submit-btn:hover {
        background-color: #023739;
        transform: translateY(-2px);
    }

    /* Map Section */
    .map-section {
        margin-top: 3rem;
    }

    .map-container {
        height: 400px;
        border-radius: 15px;
        overflow: hidden;
    }

    /* Social Media Section */
    .social-section {
        margin-top: 3rem;
        text-align: center;
    }

    .social-links {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        margin-top: 1rem;
    }

    .social-link {
        width: 50px;
        height: 50px;
        background-color: var(--primary-color);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .social-link:hover {
        transform: translateY(-5px);
        background-color: #023739;
    }

    /* Success Message */
    .success-message {
        display: none;
        background-color: #4CAF50;
        color: white;
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1rem;
        text-align: center;
    }

    @@media (max-width: 768px) {
        .section-title {
            font-size: 2.2rem;
        }

        .contact-card {
            padding: 1.5rem;
        }

        .map-container {
            height: 300px;
        }
    }
</style>

<div class="contact-page">
    <div class="container">
        <h1 class="section-title">Contact Us</h1>

        <div class="row">
            <!-- Contact Information -->
            <div class="col-md-5">
                <div class="contact-card">
                    <h2 class="mb-4" style="color: var(--primary-color);">Get in Touch</h2>
                    <div class="info-section">
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div class="info-content">
                                <div class="info-label">Location</div>
                                <div class="info-text">12 Radar Drive, Durban North , South Africa,  4051</div>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div class="info-content">
                                <div class="info-label">Email</div>
                                <div class="info-text">support@entrepreneurplatform.com</div>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-phone"></i>
                            </div>
                            <div class="info-content">
                                <div class="info-label">Phone</div>
                                <div class="info-text">+27 123 456 789</div>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="info-content">
                                <div class="info-label">Business Hours</div>
                                <div class="info-text">Monday - Friday: 9:00 AM - 5:00 PM</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="col-md-7">
                <div class="contact-card">
                    <div id="successMessage" class="success-message">
                        Thank you for your message! We'll get back to you soon.
                    </div>

                    <form id="contactForm" class="contact-form">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">First Name</label>
                                    <input type="text" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Last Name</label>
                                    <input type="text" class="form-control" required>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" required>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Subject</label>
                            <input type="text" class="form-control" required>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Message</label>
                            <textarea class="form-control" required></textarea>
                        </div>

                        <button type="submit" class="submit-btn">Send Message</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Map Section -->
        <div class="map-section">
            <div class="contact-card">
                <h2 class="mb-4" style="color: var(--primary-color);">Our Location</h2>
                <div class="map-container">
                    <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d14312.888438827147!2d31.01528545!3d-29.85868745!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1ef7aa0001c40b85%3A0x3ae84eea4a46c4f!2sDurban%20Central%2C%20Durban!5e0!3m2!1sen!2sza!4v1667234567890!5m2!1sen!2sza" 
                        width="100%" 
                        height="100%" 
                        style="border:0;" 
                        allowfullscreen="" 
                        loading="lazy">
                    </iframe>
                </div>
            </div>
        </div>

        <!-- Social Media Section -->
        <div class="social-section">
            <div class="contact-card">
                <h2 class="mb-4" style="color: var(--primary-color);">Connect With Us</h2>
                <div class="social-links">
                    <a href="#" class="social-link">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="social-link">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="social-link">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                    <a href="#" class="social-link">
                        <i class="fab fa-instagram"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<script>
    document.getElementById('contactForm').addEventListener('submit', function(e) {
        e.preventDefault();
        document.getElementById('successMessage').style.display = 'block';
        this.reset();
        setTimeout(() => {
            document.getElementById('successMessage').style.display = 'none';
        }, 5000);
    });
</script>