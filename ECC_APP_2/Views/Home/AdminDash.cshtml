@{
    ViewBag.Title = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .dashboard-header {
            text-align: center;
            margin: 50px 0;
        }

            .dashboard-header h1 {
                font-size: 42px;
                font-weight: bold;
                color: #343a40;
            }

            .dashboard-header p {
                font-size: 18px;
                color: #6c757d;
                margin-top: 10px;
            }

        .button-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 40px;
        }

        .btn {
            font-size: 18px;
            padding: 15px 30px;
            border-radius: 8px;
            width: 260px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            }

        .footer {
            text-align: center;
            margin-top: 50px;
            font-size: 14px;
            color: #6c757d;
        }
    </style>
</head>
<body>

    <div class="container">
        <!-- Dashboard Header Section -->
        <div class="dashboard-header">
            <h1>Welcome to the Admin Dashboard</h1>
            <p>Manage students, mentors, and verify business showcases with ease. Use the options below to get started.</p>
        </div>

        <!-- Button Section -->
        <div class="button-container">
            <!-- Add New Student Button -->
            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("RegisterStudent", "Home")'">
                Add New Student
            </button>

          
        </div>

        <!-- Footer -->
        <div class="footer">
            &copy; 2024 Your Company. All Rights Reserved.
        </div>
    </div>

    <!-- Bootstrap JS (Optional for any interactive features) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
