@{
    ViewBag.Title = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .dashboard-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .dashboard-header h1 {
                font-size: 36px;
                font-weight: bold;
            }

            .dashboard-header p {
                font-size: 18px;
                color: #6c757d;
            }

        .button-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 40px;
        }

        .btn {
            font-size: 18px;
            padding: 15px 30px;
            width: 250px;
        }
    </style>
</head>
<body>

    <div class="container">
        <!-- Dashboard Header Section -->
        <div class="dashboard-header">
            <h1>Welcome to the Admin Dashboard</h1>
            <p>Manage students, mentors, and verify business showcases with ease. Use the options below to get started.</p>
        </div>

        <!-- Button Section -->
        <div class="button-container">
            <!-- Add New Student Button -->
            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("RegisterStudent", "Home")'">
                Add New Student
            </button>

            <!-- Verify Business Showcases Button -->
            <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("VerifyBusinessShowcases", "Home")'">
                Verify Business Showcases
            </button>

          
        </div>
    </div>

    <!-- Bootstrap JS (Optional for any interactive features) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
