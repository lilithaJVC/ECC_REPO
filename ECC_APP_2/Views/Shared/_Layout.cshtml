<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECC_APP_2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECC_APP_2.styles.css" asp-append-version="true" />
</head>
<body style="background-color: #b5e7a0;">
    <!-- Baby green background -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light" style="background-color: #014D4E;">
            <!-- Matching green navbar -->
            <div class="container-fluid">
                <!-- Logo and Brand -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/New_Logo_ECC-removebg-preview.png" alt="ECC Logo" style="width: 40px; height: 40px;" />
                    ECC_APP_2
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                   
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <!-- Darker green button -->
                            <a class="btn" style="background-color: #014D4E; color: white;" asp-area="" asp-controller="Home" asp-action="AdminLogin">Login as Admin</a>
                        </li>
                        <li class="nav-item">
                            <!-- Darker green button -->
                            <a class="btn" style="background-color: #014D4E; color: white;" asp-area="" asp-controller="Home" asp-action="MentorLogin">Login as Mentor</a>
                        </li>
                        <li class="nav-item">
                            <!-- Darker green button -->
                            <a class="btn" style="background-color: #014D4E; color: white;" asp-area="" asp-controller="Home" asp-action="RegisterStudent">Student Registration</a>
                        </li>
                        <li class="nav-item">
                            <!-- Darker green button -->
                            <a class="btn" style="background-color: #014D4E; color: white;" asp-area="" asp-controller="Home" asp-action="StLogIn">Student LogIn</a>
                        </li>
                        
                        <li class="nav-item">
                            <!-- Darker green button -->
                            <a class="btn" style="background-color: #014D4E; color: white;" asp-area="" asp-controller="Home" asp-action="Networking">Networking</a>
                        </li>
                        <li class="nav-item">
                            <!-- Darker green button -->
                            <a class="btn" style="background-color: #014D4E; color: white;" asp-area="" asp-controller="Home" asp-action="Resources">Bussiness Proposals</a>
                        </li>
                        <li class="nav-item">
                            <!-- Darker green button -->
                            <a class="btn" style="background-color: #014D4E; color: white;" asp-area="" asp-controller="Home" asp-action="Bussiness_Showcase">Bussiness_Showcase</a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ECC_APP_2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
